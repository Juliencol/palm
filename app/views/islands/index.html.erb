<div class="main-container">
  <h1 class="text-center">Islands available</h1>
  <div class=" d-flex flex-wrap justify-content-between">
    <% @islands.each do |island| %>
      <%= link_to island_path(island) do %>
          <div class="card-trip">
              <img src= <%= island.photo %> >
              <div class="card-trip-infos">
                <div>
                  <h2><%= island.name %></h2>
                  <p><%= island.location %></p>
                </div>
                <h2 class="card-trip-pricing"> <%= island.price_by_night %>â‚¬ / night </h2>
              </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 500px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>


