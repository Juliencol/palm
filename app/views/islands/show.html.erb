<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" >

    <% if @island.photo == true %>
      <div class="carousel-item active">
        <img class="d-block w-80" alt=" Image not uploaded" src=<%= @island.photo %> >
      </div>
    <% else %>
      <div class="carousel-item ">
        <img class="d-block w-80" alt=" Image not uploaded" src="https://res.cloudinary.com/dovu27lye/image/upload/v1566247166/mohamed-thasneem-AOFlegU1eTs-unsplash_srtwvi.jpg" >
      </div>
    <% end %>
