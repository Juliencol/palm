      <div class="carousel-item ">
        <img class="d-block w-80" alt=" Image not uploaded" src=<%= @island.phototwo %> >
      </div>
    <% else %>
      <div class="carousel-item ">
        <img class="d-block w-80" alt=" Image not uploaded" src=<%= @island.photo %> >
      </div>
    <% end %>

    <% if @island.photothree == true %>
      <div class="carousel-item ">
